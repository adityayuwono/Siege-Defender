<Engine Id="SiegeDefender">
	<Objects>
		<Projectile 	Id="WoodArrow" Damage="8-12" 
			AssetId="Projectiles/WoodenBalista" 
			RoF="0.2" Ammunition="1000" Reload="0.1" 
			Accuracy="0.9" Deviation="0.001" />
		<Projectile 	Id="IronArrow" Damage="10-30" 
			AssetId="Projectiles/IronBalista" 
			RoF="0.25" Ammunition="500" Reload="0.2" 
			Accuracy="0.7" Deviation="0.005" />

		<Projectile 	Id="FireBall" Damage="8-11" 
			AssetId="Projectiles/FireBall" AoEId="FireDome" 
			RoF="0.5" Ammunition="25" Reload="2" 
			Accuracy="0.9" Deviation="0.001" />
		<Projectile 	Id="ExplosiveFireBall" Damage="15-20" 
			AssetId="Projectiles/FireBall" AoEId="Explosion"
			RoF="0.2" Ammunition="25" ReloadTime="1" 
			Accuracy="0.5" Deviation="0.01" />
		<Piercing 	Id="IronBall" Damage="50-80" 
			AssetId="Projectiles/IronBall"
			RoF="2" Ammunition="3" ReloadTime="1" 
			Accuracy="1" Deviation="0" />

		<AoE 			Id="FireDome" AssetId="Projectiles/AoE" Radius="20" Damage="4-7" />
		<ParticleAoE 	Id="Explosion" AssetId="Projectiles/Explosion" Radius="20" Damage="3-7" />

		<Enemy Id="BoxDemon" 	AssetId="Enemies/RedGoblin" 		Health="11" 	Speed="1.5" 	Rotation="10" />
		<Enemy Id="FastGoblin" 	AssetId="Enemies/RedGoblin" 		Health="1" 		Speed="4" 		Rotation="0" />
		<Enemy Id="FatBoxDemon" AssetId="Enemies/BlueGoblin" 		Health="30" 	Speed="1"		Rotation="20" />
		<Enemy Id="ShieldBearers" AssetId="Enemies/BlueGoblin" 		Health="50" 	Speed="0.001"	Rotation="0" />
		<Enemy Id="Boss" 		AssetId="Enemies/BigGoblin" 		Health="250" 	Speed="0.3" 	Rotation="0" />

		<Boss 	Id="BigGoblin" 	AssetId="Enemies/BossGoblin" Health="2100" Speed="2" >
			<Elements>
				<EnemySpawn Id="WarpGates" AssetId="WarpGates" LevelId="BigGoblinLevel1" />
				<EnemySpawn Id="ShieldSpawn" AssetId="ShieldSpawn" LevelId="Level0" />
			</Elements>
			<Limb Id="Head" 		Health="50" >
				<Trigger>
					<Condition Target="{This}" Property="Health" Value="\1" />
					<Drop Target="Wood" Amount="3-10" />
				</Trigger>
			</Limb>
			<Limb Id="RightHand" 	Health="250" >
				<Trigger>
					<Condition Target="{This}" Property="Health" Value="\1" />
					<Drop Target="LightWood" Amount="1-6" />
				</Trigger>
			</Limb>
			<Limb Id="LeftHand" 	Health="250" >
				<Trigger>
					<Condition Target="{This}" Property="Health" Value="\1" />
					<Drop Target="LightWood" Amount="1-6" />
				</Trigger>
			</Limb>
			
			
			<Skill >
				<Trigger>
					<Condition Target="{This}" Property="Minions" Comparison="NotContains" Value="FatBoxDemon" />
					<Setter Target="BigGoblin" Property="IsInvulnerable" Value="false" />
				</Trigger>
			</Skill>

			<Phase>
				<Trigger>
					<Condition Target="{This}" Property="Health" Value="\1000" />
					<Setter Target="ShieldSpawn" Property="Level" Value="BigGoblinLevel2" />
				</Trigger>
			</Phase>
			<Phase>
				<Trigger>
					<Condition Target="{This}" Property="Health" Value="\700" />
					<Setter Target="ShieldSpawn" Property="Level" Value="BigGoblinLevel3" />
				</Trigger>
			</Phase>
			<Phase>
				<Trigger>
					<Condition Target="{This}" Property="Health" Value="\400" />
					<Setter Target="ShieldSpawn" Property="Level" Value="BigGoblinLevel4" />
				</Trigger>
			</Phase>
			<Phase>
				<Trigger>
					<Condition Target="{This}" Property="Health" Value="\200" />
					<Setter Target="ShieldSpawn" Property="Level" Value="BigGoblinLevel5" />
				</Trigger>
			</Phase>

		</Boss>


		<DamageGUI Id="StandardDamageGUI" AssetId="GUIs/DamageDisplay" Font="ITCAvantGardePro-Bk" />
	</Objects>

	<Levels>
		<Level Id="Level0" Interval="1" LoopCount="0" />
		<Level Id="Level1" Interval="1" LoopCount="0">
			<Spawn EnemyId="BoxDemon" />
			<Spawn EnemyId="BoxDemon" />
			<Spawn EnemyId="BigGoblin" />
		</Level>
		<Level Id="BigGoblinLevel1" Interval="2" LoopCount="-1">
			<Spawn EnemyId="FastGoblin" />
		</Level>
		<Level Id="BigGoblinLevel2" Interval="1" LoopCount="-1">
			<Spawn EnemyId="BoxDemon" />
		</Level>
		<Level Id="BigGoblinLevel3" Interval="0.001" LoopCount="15">
			<Spawn EnemyId="ShieldBearers" />
		</Level>
		<Level Id="BigGoblinLevel4" Interval="0.001" LoopCount="25">
			<Spawn EnemyId="ShieldBearers" />
		</Level>
	</Levels>

	<Scenes>
		<Scene Id="MainMenu" AssetId="Scenes/MainMenu">
			<Elements>
				<Button AssetId="WeaponSelection" >
					<Trigger><LoadScene Target="SkillTree" /></Trigger>
				</Button>
				<Button AssetId="StartGame">
					<Trigger><LoadScene Target="Limbo" /></Trigger>
				</Button>
			</Elements>
		</Scene>

		<Scene Id="SkillTree" AssetId="Scenes/SkillTree">
			<Elements>
				<Inventory AssetId="Inventory">
					<Item AssetId="GUIs/Buttons/ProjectileIcon" Base="WoodArrow" 			Level="0" />
					<Item AssetId="GUIs/Buttons/ProjectileIcon" Base="IronArrow" 			Level="0" />
					<Item AssetId="GUIs/Buttons/ProjectileIcon" Base="FireBall" 			Level="0" />
					<Item AssetId="GUIs/Buttons/ProjectileIcon" Base="ExplosiveFireBall" 	Level="0" />
				
					<EquipmentSlot Id="LeftShooter" AssetId="LeftWeaponContainer" >
						<Item AssetId="GUIs/Buttons/ProjectileIcon" Base="WoodArrow" 			Level="0" />
						<Elements>
							<ObjectDisplay Id="LeftWeapon" AssetId="LeftWeaponDisplay" ObjectId="{LeftShooter.ProjectileId}" />
						</Elements>
					</EquipmentSlot>
					<EquipmentSlot Id="RightShooter" AssetId="RightWeaponContainer" >
						<Item AssetId="GUIs/Buttons/ProjectileIcon" Base="IronBall" 			Level="0" />
						<Elements>
							<ObjectDisplay Id="RightWeapon" AssetId="RightWeaponDisplay" ObjectId="{RightShooter.ProjectileId}" />
						</Elements>
					</EquipmentSlot>
				</Inventory>

				<Button AssetId="BackToMainMenu" >
					<Trigger><LoadScene Target="MainMenu" /></Trigger>
				</Button>
			</Elements>
		</Scene>

		<Scene Id="Limbo" AssetId="Scenes/Limbo">
			<Elements>
				<Element AssetId="Ground" />

				<EnemySpawn Id="EnemySpawn" AssetId="EnemySpawnLocation" LevelId="Level1" />

				<PlayerHitbox AssetId="PlayerHealth" />
				
				<Player AssetId="Player" >
					<Shooters>
						<Shooter AssetId="LeftShooter" ProjectileId="{LeftShooter.ProjectileId}" Index="0">
							<Source AssetId="Shooter"/>
							<Target AssetId="Target" Index="0"/>
						</Shooter>
						<Shooter AssetId="RightShooter" ProjectileId="{RightShooter.ProjectileId}" Index="1">
							<Source AssetId="Shooter"/>
							<Target AssetId="Target" Index="1"/>
						</Shooter>
					</Shooters>
				</Player>

				<GUIRoot AssetId="UIRoot">
					<Elements>
						<DamageDisplay AssetId="DamageDisplayRoot" DamageGUI="StandardDamageGUI" />
						<Button AssetId="BackToMainMenu" >
							<Trigger><LoadScene Target="MainMenu" /></Trigger>
						</Button>
					</Elements>
				</GUIRoot>

			</Elements>
		</Scene>
	</Scenes>
</Engine>