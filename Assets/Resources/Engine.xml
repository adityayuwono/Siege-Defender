      <Cache EnemyId="CrystalBreak_Small" Count="10" />
      <Cache EnemyId="StoneBreak" Count="10" />
      <Cache EnemyId="SpiderColumn" Count="5" />

      <Spawn EnemyId="CrystalSpider" Count="2" />
