<Engine Id="SiegeDefender">
	<Objects>
		<Projectile 	Id="WoodArrow" Damage="8-12" 
			AssetId="Projectiles/WoodenBalista" 
			RoF="0.2" Ammunition="1000" Reload="1" 
			Scatters="1"
			Accuracy="0.9" Deviation="0.001" />
		
		<!-- Enemies -->
		<Enemy Id="CrystalSpider" AssetId="Enemies/CrystalSpider" Health="20" Speed="3" DeathDelay="1.3" CollisionEffectNormal="CrystalBreak_Small" Target="Player" />

		<!-- Structures -->
		<Object Id="House1" AssetId="Environtments/Block1">
		</Object>
		<Object Id="House2" AssetId="Environtments/Block1">
		</Object>
		<Object Id="House3" AssetId="Environtments/Block1">
		</Object>
	</Objects>

	<Levels>
		<Level Id="Level1" Interval="1.12345" LoopCount="-1">
			<Cache EnemyId="CrystalSpider" />

			<Spawn EnemyId="CrystalSpider" />
		</Level>

		<Level Id="Houses" >
			<Spawn EnemyId="House1"/>
			<Spawn EnemyId="House2"/>
			<Spawn EnemyId="House3"/>
		</Level>
	</Levels>

	<Scenes>
		<Scene Id="MainMenu" AssetId="Scenes/MainMenu">
			<Elements>
				<Button AssetId="StartGame">
					<Triggers><EventTrigger Event="Click"><LoadScene Target="ZombieCity" LevelId="Level1" /></EventTrigger></Triggers>
				</Button>
			</Elements>
		</Scene>

		<Scene Id="ZombieCity" AssetId="Scenes/ZombieCity">
			<Elements>
				<EnemySpawn Id="EnemySpawn" AssetId="EnemySpawnLocation" />

				<ObjectSpawn Id="HouseDistricts" AssetId="HouseDistricts" LevelId="Houses"/>

				<Element Id="Player" AssetId="Fort" />

				<GUIRoot AssetId="UIRoot">
					<Elements>
						<Button AssetId="BackToMainMenu" >
							<Triggers><EventTrigger Event="Click"><LoadScene Target="MainMenu" /></EventTrigger></Triggers>
						</Button>
						<Element AssetId="LoadingCover" IsVisible="{ZombieCity.IsLoadingInProgress}" />
					</Elements>
				</GUIRoot>
			</Elements>
		</Scene>
	</Scenes>
</Engine>